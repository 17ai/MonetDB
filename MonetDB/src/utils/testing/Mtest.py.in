def isexecutable(TST) :
	if   os.name == "nt":
		for ext in ".exe", ".com", ".bat", ".cmd":
			if os.path.isfile(TST+ext):
				return [ 1, ext ]
	elif os.name == "posix":
		#TODO:
		# check with "file", and set executable
		if os.path.isfile(TST)  and  os.access(TST,os.X_OK):
			return [ 1, "" ]
	#TODO:
	#else:
		# ???
	return [ 0, "" ]
