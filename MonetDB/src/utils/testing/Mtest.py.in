def ErrMsg(TEXT) :
	STDOUT.flush()
	STDERR.write("\n"+THISFILE+":  ERROR:  %s\n\n" % TEXT)
	STDERR.flush()
### ErrMsg(TEXT) #

def ErrXit(TEXT) :
	ErrMsg(TEXT)
	sys.exit(1)
### ErrXit(TEXT) #

def Warn(TEXT) :
	STDOUT.flush()
	STDERR.write("\n"+THISFILE+"  Warning:  %s\n\n" % TEXT)
	STDERR.flush()
### Warn(TEXT) #

def startswith(str,pre) :
	return not ((len(str) < len(pre)) or (str[:len(pre)] != pre))
### startswith(str,pre) #

def path(str) :
	return regsub.gsub("/",os.sep,str)
### path(str) #

def url(str) :
	if os.name == "nt":
		return regsub.gsub("\\\\","/",str)
	else:
		return regsub.gsub(os.sep,"/",str)
### url(str) #

