			Srvr = Srvr+" "+env['SQL_PREFIX']+path("/share/sql/catalog.mil")
			Srvr = Srvr+" "+env['SQL_PREFIX']+path("/share/sql/sqlserver.mil")
		Srvr = Srvr+PROLOGUE
		#-background"
		if os.name == "nt":
			Srvr = Srvr+' & echo. & '
		else:
			Srvr = Srvr+' ; echo  ; '
		Srvr = Srvr+'echo Over..'

		SrvrOut = open(TST+".server.out","w")
		SrvrErr = open(TST+".server.err","w")
		ClntOut = open(TST+".client.out","w")
		ClntErr = open(TST+".client.err","w")

		pSrvrIn, pSrvrOut, pSrvrErr = LaunchIt(Srvr, 'printf("\\nReady.\\n");\n', SrvrOut, SrvrErr)
		ln=""
		while ( not ( pSrvrIn.closed or pSrvrOut.closed or pSrvrErr.closed ) ) and ( len(ln) < 6 or ln[:6] not in  ['Ready.','Over..'] ):
			ln=pSrvrOut.readline()
			SrvrOut.write(ln)
			SrvrOut.flush()
	else:
		ClntOut = TestOut
		ClntErr = TestErr
		
	if   CALL == "other":
		cmd = MTO+str(CTO)+" ."+os.sep+TST+EXT+" "+TST+" "+PRELUDE
		RunIt(cmd, "", ClntOut, ClntErr)
	elif CALL == "python":
		cmd = MTO+str(CTO)+" "+exe['python'][1]+" "+TST+EXT+" "+TST+" "+PRELUDE
		RunIt(cmd, "", ClntOut, ClntErr)
	elif CALL in ["milM", "milS", "milMXs", "milSXs"]:
		cmd = MTO+str(TOT)+" "+exe['Mserver'][1]
		cmd = cmd+" -db "+TSTDB+" "+PRELUDE+" < "
		if CALL in ["milM", "milS"]:
			X=""
		else:
			X="_s[0-9][0-9]"
		test = re.compile("^"+TST+X+EXT+"$")
		d = os.listdir(os.getcwd())
		d.sort()
		for f in d:
			if test.match(f):
				RunIt(cmd+f, "", ClntOut, ClntErr)
	elif CALL in ["milC", "milCXs"]:
		TSTs = []
		if CALL == "milC":
			X=""
		else:
			X="_s[0-9][0-9]"
		test = re.compile("^"+TST+X+EXT+"$")
		d = os.listdir(os.getcwd())
		d.sort()
		for f in d:
			if test.match(f):
				TSTs.append(f)

		Clnt = MTO+str(TOT)+" "+exe['Mapi_Client'][1]+" "+PRELUDE+" < "
		for f in TSTs:
			RunIt(Clnt+f, "", ClntOut, ClntErr)
		
		#TODO
		#elif CALL == "milCXp":
	elif CALL in ["sql", "sqlXs"]:
		TSTs = []
		if CALL == "sql":
			X=""
		else:
			X="_s[0-9][0-9]"
		test = re.compile("^"+TST+X+EXT+"$")
		d = os.listdir(os.getcwd())
		d.sort()
		for f in d:
			if test.match(f):
				TSTs.append(f)

		Clnt = MTO+str(TOT)+" "+exe['SQL_client'][1]+" "+PRELUDE+" < "
		for f in TSTs:
			RunIt(Clnt+f, "", ClntOut, ClntErr)

	if SERVER in ["MAPI", "SQL"]:
		if os.path.isfile(TST+".epilogue"):
			EPILOGUE = open(TST+".epilogue",'r')
			pSrvrIn.writelines(EPILOGUE.readlines())
			pSrvrIn.flush()
			EPILOGUE.close()

			pSrvrIn.write(';\nprintf("\\nDone..\\n");\n')
			pSrvrIn.flush()
			ln=""
			while ( not ( pSrvrIn.closed or pSrvrOut.closed or pSrvrErr.closed ) ) and ( len(ln) < 6 or ln[:6] not in  ['Done..','Over..'] ):
				ln=pSrvrOut.readline()
				SrvrOut.write(ln)
				SrvrOut.flush()

		if SERVER == "MAPI":
			Shwn = MTO+str(TOT)+" "+exe['Mshutdown'][1]
			ShwnOut = open(TST+".shutdown.out","w")
			ShwnErr = open(TST+".shutdown.err","w")
			RunIt(Shwn, "", ShwnOut, ShwnErr)

		if not pSrvrIn.closed:
			try:
				if SERVER == "MAPI":
					pSrvrIn.write('printf("\\n! Mserver still running after Mshutdown. Quitting now. !\\n");\n')
				pSrvrIn.write('quit;\n')
				pSrvrIn.close()
			except IOError:
				nop = ''

		CollectIt(pSrvrOut, pSrvrErr, SrvrOut, SrvrErr)

		if SERVER == "MAPI":
			AllOut = [SrvrOut, ClntOut, ShwnOut]
			AllErr = [SrvrErr, ClntErr, ShwnErr]
		else:
			AllOut = [SrvrOut, ClntOut]
			AllErr = [SrvrErr, ClntErr]
		for q in AllOut:
			n = q.name
			q.close()
			q = open(n,'r')
			TestOut.writelines(q.readlines())
			q.close()
		TestOut.flush()
		for q in AllErr:
			n = q.name
			q.close()
			q = open(n,'r')
			TestErr.writelines(q.readlines())
			q.close()
		TestErr.flush()

	TestOut.write(Prompt('Done.')) ; TestOut.flush()
	TestErr.write(Prompt('Done.')) ; TestErr.flush()
