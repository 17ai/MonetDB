def GetBitsAndModsAndStatic(env) :
	pOut,pIn,pErr = popen2.popen3(env['exe']['Mtimeout'][1]+env['exe']['Mserver'][1]+" -db "+TSTPREF)
	pIn.write('''\
MODs:=sunion([~monet_mod_nme],[~view_modules]).reverse.kunique;printf("\\nModules: ");x:="";MODs@batloop{printf("%s'%s'",x,$h);x:=",";}printf("\\n");quit;
''')
	##module("NoModule");
	pIn.close()
	qOut = pOut.readlines()
	qErr = pErr.readlines()
	pOut.close()
	pErr.close()
	env['TST_BITS'] = ""
	env['TST_MODS'] = []
	env['TST_STATIC'] = ""
	if qOut:
		tbs = re.compile("^# compiled for .*/([63][42]bit); (.*) linked")
		tm = re.compile("^Modules: (.*)$")
		#ts = re.compile("^!ERROR: DL_open: library not found \(STATIC\).$")
		for l in qOut:
			bs = tbs.match(l)
			if bs:
				env['TST_BITS'] = bs.group(1)
				os.environ['TST_BITS'] = env['TST_BITS']
				if bs.group(2) == "statically":
					env['TST_STATIC'] = "1"
					os.environ['TST_STATIC'] = env['TST_STATIC']
			m = tm.match(l)
			if m:
				env['TST_MODS'] = eval(m.group(1))
			#s = ts.match(l)
			#if s:
			#	env['TST_STATIC'] = "1"
			#	os.environ['TST_STATIC'] = env['TST_STATIC']
	else:
		Warn("No output from Mserver when checking for Bits & Modules!?")
		if qErr:
			STDERR.writelines(qErr)
			STDERR.write("\n")
			STDERR.flush()
	os.environ['TST_MODS'] = str(env['TST_MODS'])
	return env['TST_BITS'], env['TST_MODS'], env['TST_STATIC']
