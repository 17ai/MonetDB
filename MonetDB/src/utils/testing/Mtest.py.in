def CheckBATs(env, TST, TSTDB) :
	pOut,pIn,pErr = popen2.popen3(env['exe']['Mtimeout'][1]+env['exe']['Mserver'][1]+" -db "+TSTDB)
	pIn.write('''\
BATs:=view_bbp_name;printf("\\nBATs: ");x:="";BATs@batloop{printf("%s'%s'",x,$t);x:=",";}printf("\\n");quit;
''')
	pIn.close()
	qOut = pOut.readlines()
	qErr = pErr.readlines()
	pOut.close()
	pErr.close()
	TST_BATS = []
	if qOut:
		tb = re.compile("^BATs: (.*)$")
		for l in qOut:
			b = tb.match(l)
			if b:
				TST_BATS = eval(b.group(1))
	else:
		Warn("No output from Mserver when checking for Bats!?")
		if qErr:
			STDERR.writelines(qErr)
			STDERR.write("\n")
			STDERR.flush()

	missing = []
	if os.path.isfile(TST+".BATs"):
		for b in fileinput.input(TST+".BATs"):
			b = string.strip(b)
			if b  and  b[0] != "#"  and  b not in TST_BATS:
					missing.append(b)
	return missing
