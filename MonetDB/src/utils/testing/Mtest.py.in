def CheckMods(env, TST, SERVER) :
	missing = []
	if os.path.isfile(TST+".modules"):
		for m in fileinput.input(TST+".modules"):
			m = string.strip(m)
			if m  and  m[0] != "#"  and  m not in env['TST_MODS']:
					missing.append(m)
	if SERVER == "MAPI":
		for m in "unix", "str", "mapi":
			if m not in env['TST_MODS']:
				missing.append(m)
	if SERVER == "SQL":
		for m in "str", "sqlserver", "ascii_io", "alarm", "unix", "ddbench", "aggrX3", "monettime", "uchr":
			if m not in env['TST_MODS']:
				missing.append(m)
	return missing
