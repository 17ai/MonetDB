def AddHref (TSTDIR, TST, WHAT, diff) :
	STRING = "<A HREF='."+TST+WHAT+".html' TARGET='"+OSVER+"_"+TSTDIR+"_body'>"+WHAT[1:]+"</A>"
	if diff:
		return "<B>"+STRING+"</B>"
	else:
		return "("+STRING+")"
