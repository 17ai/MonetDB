#include "bbp.h"

str CMDbbpsetRoles(int *r, int *bid, str *hname, str *tname){
	BAT *b;
	@:getBATdescriptor(r,bid,b,CMDbbpsetRoles)@
	BATroles(b, *hname, *tname);
	*r= b->batCacheid;
	BBPfix(b->batCacheid);
	return MAL_SUCCEED;
}
str CMDbbpsetColumn(int *r, int *bid, str *hname){
	BAT *b;
	@:getBATdescriptor(r,bid,b,CMDbbpsetRoles)@
	*r= b->batCacheid;
	BBPfix(b->batCacheid);
	BATroles(b, *hname, b->tident);
	return MAL_SUCCEED;
}

str CMDbbprename(int *retval, int *bid, str *s){
	BAT *b;
	int ret;
	@:getBATdescriptor(retval,bid,b,CMDbbprename)@
	ret = BATname(b,*s);
	*retval = *bid;
        if (ret == 1) 
	   return throwException("CMDbbprename: identifier expected: %s",*s);
        else if (ret == BBPRENAME_ILLEGAL)
	   return throwException("CMDbbprename: illegal temporary name: '%s'", *s);
        else if (ret == BBPRENAME_LONG)
	   return throwException("CMDbbprename: name too long: '%s'", *s);
        else /* if (ret == BBPRENAME_ALREADY) 
	   return throwException("CMDbbprename: rename already"); */
	return MAL_SUCCEED;
}

str CMDbbpname(str *retval, int *bid){
	BAT *b;
	@:getBATdescriptor(retval,bid,b,CMDbbpname)@
	*retval = GDKstrdup(BBPname(b->batCacheid));
	return MAL_SUCCEED;
}

str CMDbbpsetPersistent(int *res, int *bid) {
	BAT *b;
	@:getBATdescriptor(res,bid,b,CMDbbpsetPersistence)@
	BATpropcheck(b);
	BATpropcheck(BATmirror(b));
	*res= b->batPersistence & PERSISTENT;
	BATmode(b, PERSISTENT);
        return MAL_SUCCEED;
}
str CMDbbpisPersistent(int *res, int *bid) {
	BAT *b;
	@:getBATdescriptor(res,bid,b,CMDbbpsetPersistence)@
