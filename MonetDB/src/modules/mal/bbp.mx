str CMDbbpunload(bit *res, str *input) {
        int bid = ABS(BBPindex(*input));
	*res = FALSE;
        if (bid > 0) {
		BBPfix(bid);
		*res = BBPunload(bid);
	}
        return MAL_SUCCEED;
}
str CMDbbpisCached(int *res, int *bid) {
	BAT *b;
	@:getBATdescriptor(res,bid,b,CMDbbpisCached)@
	*res = 0;
	return throwMessage("CMDbbpisCached:not yet implemented");
}
str CMDbbpload(int *res, str *input) {
	int bid= BBPindex(*input);
	*res = bid;
	if(bid) return MAL_SUCCEED;
	return throwMessage("CMDbbpload:loading failed");
}

str CMDbbphot(str *input) {
	BBPhot(BBPindex(*input));
	return MAL_SUCCEED;
}

str CMDbbpcold(str *input) {
	BBPcold(BBPindex(*input));
	return MAL_SUCCEED;
}

str CMDbbpsave(bit *res, str *input) {
	int bid = BBPindex(*input);
	BAT *b;
	*res = FALSE;
	if (bid ) {
		BBPfix(bid);
		b = BBP_cache(bid);
		if (b && BATdirty(b)) { 
			if (BBPsave(b) == 0) *res = TRUE;
		}
		BBPunfix(bid);
	}
        return MAL_SUCCEED;
}
str CMDbbpsave2(bit *res, int *bid) {
	BAT *b;
	@:getBATdescriptor2(res,bid,b,CMDbbpsave)@
	if (b && BATdirty(b)) { 
		if (BBPsave(b) == 0) *res = TRUE;
	}
	BBPunfix(*bid);
        return MAL_SUCCEED;
}


