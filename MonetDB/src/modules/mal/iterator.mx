@f iterator
@t Iterator primitives
@a Martin Kersten
@v 0.1
@* Introduction
This module contains the framework for the construction of iterators.
Iterators enumerate elements in a collection defined by a few paramaters,
e.g. a lower/upper bound, or a bat. An iterator is initialized in the first
call by recognizing that the control variable lies outside the intended
collection.

@mal
# The routines below are linked with the kernel by default

MODULE iterator;

COMMAND foreach(i:lng, first:lng, last:lng):bit = lngForloop;
COMMAND foreach(i:int, first:int, last:int):bit = intForloop;
COMMAND foreach(i:sht, first:sht, last:sht):bit = shtForloop;
COMMAND foreach(i:chr, first:chr, last:chr):bit = chrForloop;

COMMAND foreach(i:flt, first:flt, last:flt, step:flt):bit = fltForloopStep;
COMMAND foreach(i:dbl, first:dbl, last:dbl, step:dbl):bit = dblForloopStep;
COMMAND foreach(i:lng, first:lng, last:lng, step:lng):bit = lngForloopStep;
COMMAND foreach(i:chr, first:chr, last:chr, step:chr):bit = chrForloopStep;
COMMAND foreach(i:int, first:int, last:int, step:int):bit = intForloopStep;
COMMAND foreach(i:sht, first:sht, last:sht, step:sht):bit = shtForloopStep;

PATTERN argument(i:int, arg:any):bit = tobedefinedIterator;

# batloop functions require fixed storage for their result
COMMAND batloop(b:bat, head:int,tail:int):bit = intintBatloopStep;
