	COND = HAVE_HGE
	HEADERS = mal
	DIR = libdir/monetdb5
	SOURCES = grid_hge.mal
}

headers_autoload_grid_hge = {
	COND = HAVE_HGE
	HEADERS = mal
	DIR = libdir/monetdb5/autoload
	SOURCES = 31_grid_hge.mal
}

EXTRA_DIST = 30_geom.mal geom.mal 31_grid.mal grid.mal
