}

headers_mal_grid = {
	HEADERS = mal
	DIR = libdir/monetdb5
	SOURCES = grid.mal
}

headers_autoload_grid = {
	HEADERS = mal
	DIR = libdir/monetdb5/autoload
	SOURCES = 31_grid.mal
}

