INCLUDES = ../lib \
           ../../gdk \
           ../../common/stream \
           ../../common/options \
           ../../monetdb5/mal \
           $(GEOS_INCS) $(PROJ_INCS)

lib__geom = {
	MODULE
	DIR = libdir/monetdb5
	SOURCES = geom.h geom.c geomBulk.c geom_upgrade.c grid.h grid_impl.h grid.c
