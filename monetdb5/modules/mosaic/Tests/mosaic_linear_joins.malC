(jl,jr):= algebra.subjoin(base,d, nil:bat, nil:bat,false,0:lng);
io.print(jl);
io.print(jr);
io.print(jl,jr);
(ml,mr):= mosaic.subjoin(x,d, nil:bat, nil:bat,false,0:lng);
io.print(ml);
io.print(mr);
io.print(ml,mr);

